<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="poweremail_robinson_tree">
			<field name="name">poweremail.mailbox.robinsontree</field>
			<field name="model">poweremail.mailbox</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Power Email Robinson">
					<field name="pem_user"/>
					<field name="pem_from" select="1" />
					<field name="pem_to" select="1" />
					<field name="pem_subject" select="1" />
					<field name="pem_attachments_ids" select="2" />
					<field name="date_mail" select="2" />
					<field name="pem_recd" colspan="2" />
				</tree>
			</field>
		</record>
        <record model="ir.actions.act_window" id="action_poweremail_robinson_tree_company">
			<field name="name">Email Mailbox</field>
			<field name="res_model">poweremail.mailbox</field>
			<field name="view_type">form</field>
			<field name="view_mode">form,tree</field>
			<field name="view_id" ref="poweremail_robinson_tree"/>
			<field name="domain">[('folder', '=', 'robinson')]</field>
			<field name="context">{'company':True}</field>
		</record>
        <menuitem name="Robinson" id="menu_poweremail_robinson_company" parent="poweremail.menu_poweremail_company" action="action_poweremail_robinson_tree_company" />
    </data>
</openerp>